{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "#emojis": ["./constants/emojis.json"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
